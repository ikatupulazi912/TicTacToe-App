<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/game_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:columnCount="3"
        android:rowCount="3"
        android:useDefaultMargins="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            style="@style/BoardButton"
            android:onClick="onSpaceButtonClick"
            android:text="@string/space_value" />

        <Button
            style="@style/BoardButton"
            android:onClick="onSpaceButtonClick"
            android:text="@string/space_value" />

        <Button
            style="@style/BoardButton"
            android:onClick="onSpaceButtonClick"
            android:text="@string/space_value" />

        <Button
            style="@style/BoardButton"
            android:onClick="onSpaceButtonClick"
            android:text="@string/space_value" />

        <Button
            style="@style/BoardButton"
            android:onClick="onSpaceButtonClick"
            android:text="@string/space_value" />

        <Button
            style="@style/BoardButton"
            android:onClick="onSpaceButtonClick"
            android:text="@string/space_value" />

        <Button
            style="@style/BoardButton"
            android:onClick="onSpaceButtonClick"
            android:text="@string/space_value" />

        <Button
            style="@style/BoardButton"
            android:onClick="onSpaceButtonClick"
            android:text="@string/space_value" />

        <Button
            style="@style/BoardButton"
            android:onClick="onSpaceButtonClick"
            android:text="@string/space_value" />

    </GridLayout>

    <Button
        android:id="@+id/button_new_game"
        style="@style/GameOptionButton"
        android:layout_marginTop="24dp"
        android:onClick="onNewGameClick"
        android:text="@string/new_game"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player_turn" />

    <TextView
        android:id="@+id/player_turn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/game_grid" />

</androidx.constraintlayout.widget.ConstraintLayout>